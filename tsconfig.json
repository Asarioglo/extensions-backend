{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "sourceRoot": "src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/services/Users"],
  "lib": ["es2015"],
  "copyFiles": [
    {
      "source": "src/config",
      "destination": "dist/config"
    }
  ]
}